<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>String</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.string %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to 'Show', todo_list  , class: "button"%></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list) , class: "button" %></td>
        <td><%= link_to 'Delete', todo_list, class: "button" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="button-container">
  <%= link_to 'New Todo List', new_todo_list_path, class: "button new-todo-button" %>
</div>
